[Unit]
Description=MultiClipRelay relay (TCP)

[Service]
Type=simple
EnvironmentFile=-%h/.config/multicliprelay/multicliprelay.env

# Defaults (can be overridden by EnvironmentFile)
Environment=MULTICLIPRELAY_BIND=127.0.0.1:8080

ExecStart=multicliprelay-relay --bind ${MULTICLIPRELAY_BIND}
Restart=on-failure
RestartSec=1

[Install]
WantedBy=default.target
