# Example environment for systemd user services.
# Put this at: ~/.config/cliprelay/cliprelay.env

# Relay endpoint
CLIPRELAY_RELAY=127.0.0.1:8080

# Room name (must match across devices)
CLIPRELAY_ROOM=default

# Limits
CLIPRELAY_MAX_TEXT_BYTES=1048576
CLIPRELAY_MAX_IMAGE_BYTES=20971520
CLIPRELAY_MAX_FILE_BYTES=20971520

# Image mode: force-png | multi | passthrough | spoof-png
CLIPRELAY_IMAGE_MODE=force-png

# Watch mode: watch | poll
CLIPRELAY_WATCH_MODE=watch
CLIPRELAY_POLL_INTERVAL_MS=200
