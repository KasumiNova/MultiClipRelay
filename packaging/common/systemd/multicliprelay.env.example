# Put this at: ~/.config/multicliprelay/multicliprelay.env

# Relay address (bind or connect target)
#MULTICLIPRELAY_BIND=127.0.0.1:8080
#MULTICLIPRELAY_RELAY=127.0.0.1:8080

# Room name
#MULTICLIPRELAY_ROOM=default

# Limits
#MULTICLIPRELAY_MAX_TEXT_BYTES=1048576
#MULTICLIPRELAY_MAX_IMAGE_BYTES=20971520
#MULTICLIPRELAY_MAX_FILE_BYTES=20971520

# Modes
#MULTICLIPRELAY_IMAGE_MODE=force-png
#MULTICLIPRELAY_WATCH_MODE=watch
#MULTICLIPRELAY_POLL_INTERVAL_MS=200

# Debug logging (optional)
#RUST_LOG=node=debug,relay=debug
#MCR_WL_WATCH_DEBUG=1

# X11 <-> Wayland sync (node x11-sync)
#MULTICLIPRELAY_X11_POLL_INTERVAL_MS=200
